<% if extensions.any? %>
  <div id="filterrific_results">
      <table class="table">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Date de sortie</th>
            <th>Autorisée en standard</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @extensions.each do |extension| %>
            <tr>
              <td><%= extension.name %></td>
              <td><%= extension.release %></td>
              <td><%= extension.standard %></td>
              <td><%= link_to 'Montrer', extension, class:'btn btn-info' %></td>

              <% if (user_signed_in?) && current_user.admin? %>
            <td><%= link_to 'Modifier', edit_extension_path(extension), class:'btn btn-warning' %></td>
            <td><%= link_to 'Effacer', extension, class:'btn btn-danger', method: :delete, data: { confirm: 'Êtes-vous sur de supprimer cette extension?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

  </div>
    </li>
<% else %>
  <p>Il n'y a pas d'extension!</p>
<% end %>

<% if (user_signed_in?) && current_user.admin? %>
    <%= link_to 'Ajouter', new_extension_path, class:'btn btn-info' %>
<% end %>
</div>

