<% if @hscards.any? %>
  <div id="filterrific_results">

    <% @hscards.each do |hscard| %>
      <div style="background-image: url(<%= hscard.hs_class.picture %>)" class="card">
              <div class="number contour_noir cout"><%= hscard.cost %></div>
              <div class="nom contour_noir"><%= hscard.name %></div>
              <div class="image">
                <img src="<%hscard.picture %>" alt="">
              </div>
              <div class="rarete">
                <img src="<%= hscard.rarity.picture %>" alt="">
              </div>
              <div class="description"><%= hscard.description %></div>
              <div class="number points_attaque contour_noir"><%= hscard.attack_points %></div>
              <div class="number points_vie contour_noir"><%= hscard.life_points %></div>

              <div class="bouton_interaction"><%= link_to 'Afficher', hscard, class: 'btn btn-info' %>
                <% if (user_signed_in?) && current_user.admin? %>
                  <%= link_to 'Modifier', edit_hs_card_path(hscard), class:'btn btn-warning' %>
                  <%= link_to 'Supprimer', hscard, method: :delete, data: {confirm: 'ÃŠtes-vous sÃ»r(e) de vouloir supprimer cette carte?'}, class:'btn btn-danger' %>
                <% end %>
              </div>

    <% end %>

  <%= will_paginate @hscards, renderer: BootstrapPagination::Rails %>
  </div>
<% else %>
  <p>Il n'y a pas de cartes!</p>
<% end %>
</div>

