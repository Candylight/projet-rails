<p id="notice"><%= notice %></p>

<h1>Liste des groupes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to 'Montrer', group, class: 'btn btn-info' %></td>
        <% if (user_signed_in?) && current_user.admin? %>
      <td><%= link_to 'Modifier', edit_group_path(group), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Supprimer', group, method: :delete, data: { confirm: 'ÃŠtes vous sur de vouloir supprimer ce groupe?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if (user_signed_in?) && current_user.admin? %>
<%= link_to 'Ajouter', new_group_path, class:'btn btn-info' %>
<% end %>