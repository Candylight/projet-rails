<p id="notice"><%= notice %></p>

<h1>Liste rareté</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Couleur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rarities.each do |rarity| %>
      <tr>
        <td><%= rarity.name %></td>
        <td><%= rarity.color %></td>
        <td><img src ="<%= rarity.picture %>"></td>
        <td><%= link_to 'Montrer', rarity, class:'btn btn-info' %></td>

        <% if (user_signed_in?) && current_user.admin? %>
      <td><%= link_to 'Modifier', edit_rarity_path(rarity), class:'btn btn-warning' %></td>
        <td><%= link_to 'Effacer', rarity,class:'btn btn-danger', method: :delete, data: { confirm: 'Êtes vous sur de supprimer cette rareté?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if (user_signed_in?) && current_user.admin? %>
<%= link_to 'Ajouter', new_rarity_path, class:'btn btn-info' %>
<% end %>
