<%= simple_form_for(@deck) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :hs_cards %>
    <%= f.association :hs_class %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
