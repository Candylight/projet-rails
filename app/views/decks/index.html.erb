<p id="notice"><%= notice %></p>

<h1>Listes des decks</h1>

<table class="table class-show">

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.name %></td>
        <td><%= deck.views %></td>
        <td><%= deck.mark %></td>
        <td><%= link_to 'Montrer', deck, class:'btn btn-info' %></td>
        <% if (user_signed_in?) && current_user.admin? %>
      <td><%= link_to 'Modifier', edit_deck_path(deck), class:'btn btn-warning' %></td>
        <td><%= link_to 'Effacer', deck, class:'btn btn-danger', method: :delete, data: { confirm: 'ÃŠtes-vous sur de supprimer ce deck?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

