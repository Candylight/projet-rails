<h1>Liste des types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= link_to 'Montrer', type,  class:'btn btn-info' %></td>

        <% if (user_signed_in?) && current_user.admin? %>
      <td><%= link_to 'Modifier', edit_type_path(type), class:'btn btn-warning' %></td>
        <td><%= link_to 'Effacer', type, method: :delete, data: { confirm: 'ÃŠtes-vous sur de vouloir supprimer ce type?' }, class:'btn btn-danger' %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

